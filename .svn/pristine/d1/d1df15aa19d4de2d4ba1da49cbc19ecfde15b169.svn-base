package cn.longfox.tutorialspoint.java.example.Strings;
/**
 * 
 * @author Administrator
 *功能：通过使用substring方法提取指定的字符串，组合成新的字符串来达到删除指定位置
 *字符的字符串。
 */
public class removePositionString {
	public static void main(String []args){
		String origalStr = "this is java";
		System.out.println(removeAtChar(origalStr,5));
	}
	
	public static String removeAtChar(String s,int pos){
		String tmpStr = s.substring(0, pos)+s.substring(pos+1);
		return tmpStr;
	}
}
